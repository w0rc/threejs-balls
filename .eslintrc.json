{
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "quotes": ["error", "double"],
        "keyword-spacing": ["error", {
            "after": true,
            "before": true
        }],
        "space-before-blocks": ["error", {
            "functions": "always",
            "keywords": "always",
            "classes": "always"
        }],
        "space-before-function-paren": ["error"],
        "space-infix-ops": "error",
        "space-in-parens": ["error", "always"],
        "space-unary-ops": "error"
    }
}
